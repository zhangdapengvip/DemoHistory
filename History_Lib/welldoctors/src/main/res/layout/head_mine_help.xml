<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/app_background_color"
              android:orientation="vertical">

    <TextView
        style="@style/label_normal"
        android:background="@color/white"
        android:text="@string/label_wait_help"/>

    <include layout="@layout/include_line_simple"/>

    <ListView
        android:id="@+id/lv_wait_help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:divider="@drawable/bg_line_simple"
        android:listSelector="@drawable/selector_llistview_transparent"
        android:scrollbarThumbVertical="@drawable/ic_scroll_vertical"/>


    <TextView
        style="@style/label_normal"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dimen_10"
        android:text="@string/label_wait_history"/>
</LinearLayout>