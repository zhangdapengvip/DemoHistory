<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_title_choice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingBottom="@dimen/dimen_10"
        android:text="@string/title_office_choice"
        android:textColor="@color/default_alert_dlg_title_color"
        android:textSize="@dimen/default_alert_dlg_title_size"/>

    <RadioGroup
        android:id="@+id/rg_office_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title_choice"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"/>

</RelativeLayout>