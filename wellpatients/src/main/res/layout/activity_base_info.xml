<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background_color"
    android:orientation="vertical"
    tools:visibility="visible">

    <com.zero.library.base.view.TitleBarView
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/textview_key_base"
                        android:text="姓名"/>

                    <EditText
                        android:id="@+id/et_name"
                        style="@style/textview_value"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/textview_key_base"
                        android:text="性别"/>

                    <com.yijia.patient.ui.view.MultiChoiceDialog
                        android:id="@+id/mcd_sex"
                        style="@style/textview_value"
                        android:drawableRight="@drawable/ic_right_drop"
                        app:multi_size="1"
                        app:source_key="sex"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/textview_key_base"
                        android:text="身高(cm)"/>

                    <EditText
                        android:id="@+id/et_height"
                        style="@style/textview_value"
                        android:inputType="number"
                        android:maxLength="3"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/textview_key_base"
                        android:text="体重(kg)"/>

                    <EditText
                        android:id="@+id/et_weight"
                        style="@style/textview_value"
                        android:inputType="number"
                        android:maxLength="3"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/textview_key_base"
                        android:text="婚姻状况"/>

                    <com.yijia.patient.ui.view.MultiChoiceDialog
                        android:id="@+id/mcd_marry"
                        style="@style/textview_value"
                        android:drawableRight="@drawable/ic_right_drop"
                        app:multi_size="1"
                        app:source_key="marry"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/textview_key_base"
                        android:text="民族"/>

                    <EditText
                        android:id="@+id/et_nation"
                        style="@style/textview_value"/>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/textview_key_base"
                        android:text="出生日期"/>

                    <TextView
                        android:id="@+id/tv_birthday"
                        style="@style/textview_value"
                        android:drawableRight="@drawable/ic_choice_date"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/textview_key_base"
                        android:text="联系电话"/>

                    <EditText
                        android:id="@+id/et_phone"
                        style="@style/textview_value"
                        android:inputType="phone"
                        android:maxLength="20"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/textview_key_base"
                        android:text="电子邮箱"/>

                    <EditText
                        android:id="@+id/et_email"
                        style="@style/textview_value"
                        android:inputType="textEmailAddress"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/textview_key_base"
                        android:text="家庭住址"/>

                    <EditText
                        android:id="@+id/et_place"
                        style="@style/textview_value"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_women_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/textview_key_base"
                            android:text="首次来月经"/>

                        <EditText
                            android:id="@+id/et_menses"
                            style="@style/textview_value"
                            android:inputType="number"
                            android:maxLength="2"/>

                        <TextView
                            style="@style/textview_key_base"
                            android:text="岁"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/textview_key_base"
                            android:text="怀孕"/>

                        <EditText
                            android:id="@+id/et_conceive"
                            style="@style/textview_value"
                            android:inputType="number"
                            android:maxLength="2"/>

                        <TextView
                            style="@style/textview_key_base"
                            android:text="次"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/textview_key_base"
                            android:text="流产"/>

                        <EditText
                            android:id="@+id/et_abortion"
                            style="@style/textview_value"
                            android:inputType="number"
                            android:maxLength="2"/>

                        <TextView
                            style="@style/textview_key_base"
                            android:text="次"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/textview_key_base"
                            android:text="生娩"/>

                        <EditText
                            android:id="@+id/et_childbirth"
                            style="@style/textview_value"
                            android:inputType="number"
                            android:maxLength="2"/>

                        <TextView
                            style="@style/textview_key_base"
                            android:text="次"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/textview_key_base"
                            android:text="活产"/>

                        <EditText
                            android:id="@+id/et_live_birth"
                            style="@style/textview_value"
                            android:inputType="number"
                            android:maxLength="2"/>

                        <TextView
                            style="@style/textview_key_base"
                            android:text="次"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>