<resources>
    <!--LinearLayout 输入框-->
    <style name="input_linearlayout" parent="btn_normal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_edittext_login</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">@dimen/dimen_10</item>
        <item name="android:paddingBottom">@dimen/dimen_2</item>
        <item name="android:paddingLeft">@dimen/dimen_5</item>
        <item name="android:paddingRight">@dimen/dimen_5</item>
        <item name="android:paddingTop">@dimen/dimen_2</item>
    </style>

    <!--Label样式-->
    <style name="label_normal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/dimen_16</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textColor">@color/gray_33</item>
        <item name="android:drawableLeft">@drawable/bg_left_rect</item>
        <item name="android:drawablePadding">@dimen/dimen_5</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingBottom">@dimen/dimen_5</item>
        <item name="android:paddingTop">@dimen/dimen_5</item>
    </style>

    <style name="StyledIndicatorsTwo" parent="@style/AppTheme">
        <item name="vpiCirclePageIndicatorStyle">@style/CustomCirclePageIndicator</item>
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicatorTwo</item>
        <item name="vpiUnderlinePageIndicatorStyle">@style/CustomUnderlinePageIndicator</item>
    </style>

    <style name="CustomTabPageIndicatorTwo">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_tab_two</item>
        <item name="android:divider">@drawable/bg_tab_indicator_divider</item>
        <item name="android:showDividers">none</item>
        <item name="android:textColor">@drawable/bg_tab_text_colortwo</item>
        <item name="android:textSize">16sp</item>
        <item name="android:dividerPadding">10dp</item>
        <item name="android:paddingLeft">@dimen/dimen_3</item>
        <item name="android:paddingRight">@dimen/dimen_3</item>
        <item name="android:paddingTop">@dimen/dimen_5</item>
        <item name="android:paddingBottom">@dimen/dimen_6</item>
        <item name="android:maxLines">1</item>
        <item name="android:fadingEdgeLength">10dp</item>
        <item name="android:fadingEdge">horizontal</item>
    </style>

    <style name="textview_key_base">
        <item name="android:maxLines">1</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/gray_33</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="health_textview_base">
        <item name="android:paddingLeft">3dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:textColor">@color/gray_33</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="textview_value" parent="health_textview_base">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawableBottom">@drawable/bg_bottom_line</item>
    </style>


    <style name="holder_textview_value" parent="health_textview_base">
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/gray_77</item>
    </style>

    <style name="checkbox_health">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">@color/gray_33</item>
        <item name="android:button">@null</item>
        <item name="android:paddingLeft">@dimen/dimen_5</item>
        <item name="android:paddingTop">@dimen/dimen_2</item>
        <item name="android:paddingBottom">@dimen/dimen_2</item>
        <item name="android:drawablePadding">@dimen/dimen_5</item>
    </style>

    <style name="single_checkbox_health" parent="checkbox_health">
        <item name="android:drawableLeft">@drawable/selector_check_box_green</item>
    </style>

    <style name="multi_checkbox_health" parent="checkbox_health">
        <item name="android:drawableLeft">@drawable/selector_multi_check_blue</item>
    </style>

    <style name="lable_health" parent="text_normal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_18</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textColor">@color/gray_66</item>
        <item name="android:paddingRight">@dimen/dimen_5</item>
        <item name="android:paddingTop">@dimen/dimen_3</item>
        <item name="android:paddingBottom">@dimen/dimen_3</item>
        <item name="android:background">@color/white</item>
        <item name="android:drawableLeft">@drawable/bg_left_rect</item>
        <item name="android:drawablePadding">@dimen/dimen_10</item>
    </style>

</resources>
